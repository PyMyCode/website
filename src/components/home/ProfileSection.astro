---
import type { TranslationKey } from "../../i18n/translations";

interface Props {
  t: TranslationKey;
}

const { t } = Astro.props;
---

<div class="flex align-middle gap-6">
  <img
    src="/profile.jpg"
    alt={t.name}
    class="w-32 h-32 rounded-full object-cover shadow-lg shrink-0"
  />
  <div class="flex flex-col justify-end">
    <h1 class="text-5xl mb-4 font-bold tracking-wide">{t.name}</h1>
    <div class="text-gray-600 text-xl mb-6">
      {t.tagline}
    </div>
  </div>
</div>
